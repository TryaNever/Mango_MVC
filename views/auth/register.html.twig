<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>

<h2>Register</h2>

<form action="/register" method="POST" class="flex flex-col gap-3">
<div class="flex gap-3">
    <label for="name">Name :</label>
    <input type="text" id="name" name="name" class="border" {% if data.name is defined  %}{data.name} {% endif %}>
    {% if errors.name is defined %}{{errors.name}}{% endif %}
</div>
<div class="flex gap-3">
    <label for="email">email :</label>
    <input type="text" id="email" name="email" class="border" {% if data.email is defined  %}{data.email} {% endif %}>
    {% if errors.email is defined %}{{errors.email}}{% endif %}
</div>
<div class="flex gap-3">
    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="password" class="border" {% if data.password is defined  %}{data.password} {% endif %}>
</div>
    <button type="submit">S'inscrire</button>
    {% if errors.global is defined %}
    <p class="text-red-600 mb-4">{{ errors.global }}</p>
{% endif %}
</form>

</body>
</html>
